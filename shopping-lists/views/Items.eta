<html>
    <head>
        <title>My Shopping List</title>
        <meta name="description" content="This is a sample HTML document">
    </head>
    <body>
        <a href="/lists">Shopping lists</a>
        <h1>Shopping list name:  <%= it.shoppinglistname.name %></h1>

        <h2>Existing items:</h2>
        <form method="POST" action="/lists/<%= it.ListId %>/items">
           Add new item: <input type="text" name="itemName" />
            <input type="submit" value="Add item to list" />
        </form>

        <ol>
        <% it.items.forEach((item) => { %>
            <li>
                <% if (item.collected === true) { %>
                <del style="text-decoration: line-through;"><%= item.name %></del>
                <% } else { %>
                <del style="text-decoration: none;"><%= item.name %></del>
                <% } %>
                <form method="POST" action="/lists/<%= item.shopping_list_id %>/items/<%= item.id %>/collect">
                <input type="submit" value="Mark collected"/></form>
            </li> 
        <% }); %>
        </ol>
    </body>
</html>
